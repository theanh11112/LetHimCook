{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/(tabs)/LetHimCook/models/RecipeModel.js",
    "app/(tabs)/LetHimCook/models/ingredientsData.js",
    "app/(tabs)/LetHimCook/models/IngredientModel.js",
    "path/to/types.ts" // Ensure this path is correct
  ]
}